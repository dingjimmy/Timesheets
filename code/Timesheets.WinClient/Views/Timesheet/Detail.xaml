<UserControl x:Class="Timesheets.WinClient.Timesheet.Detail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timesheets.WinClient"
             mc:Ignorable="d" 
             d:DesignWidth="300"
             d:DesignHeight="300">
    
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Name="ShowList" Padding="10" >Back</Button>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Email" Padding="10">Email</Button>
                <Button Name="Print" Padding="10">Print</Button>
                <Button Name="Edit" Padding="10">Edit</Button>
            </StackPanel>
            
        </Grid>
        <Grid >

        </Grid>
    </DockPanel>
</UserControl>
