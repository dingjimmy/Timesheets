@using Timesheets.Web.Models
@model IEnumerable<TimesheetViewModel>

<div class="list-group">

    <!-- search timesheets molecule -->
    <div class="list-group-item">
        <div class="input-group">
            <input type="text" class="form-control" />
            <button class="btn btn-secondary">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>

    <!-- add new timesheet molecule-->
    <div class="list-group-item">
        <div class="d-grid">
            <button class="btn btn-primary" hx-get="/timesheet" hx-target="#content2">Add Timesheet</button>
        </div>
    </div>     

    @foreach (TimesheetViewModel ts in Model)
        {
            <a class="list-group-item" hx-get="/timesheet/@ts.ID" hx-target="#content2" href="/timesheet/@ts.ID">
                <div>
                    <h5 class="mb-1">@ts.Name</h5>
                </div>
                <p class="mb-1">@ts.PeriodStarts.ToLongDateString() to @ts.PeriodEnds.ToLongDateString()</p>
            </a>
        }
    }
</div>